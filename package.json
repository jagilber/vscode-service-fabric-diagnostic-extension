{
  "name": "vscode-service-fabric-diagnostic-extension",
  "displayName": "Service Fabric Diagnostic Extension",
  "description": "Manage and diagnose Azure Service Fabric clusters with visual tree view, health monitoring, and operational tools",
  "version": "1.0.2",
  "publisher": "jagilber",
  "license": "MIT",
  "keywords": [
    "service fabric",
    "azure",
    "microservices",
    "cluster",
    "diagnostic",
    "monitoring",
    "devops",
    "operations"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jagilber/vscode-service-fabric-diagnostic-extension"
  },
  "bugs": {
    "url": "https://github.com/jagilber/vscode-service-fabric-diagnostic-extension/issues"
  },
  "homepage": "https://github.com/jagilber/vscode-service-fabric-diagnostic-extension#readme",
  "qna": "https://github.com/jagilber/vscode-service-fabric-diagnostic-extension/discussions",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:sfClusterExplorer.startExtension",
    "onCommand:sfClusterExplorer.refresh",
    "onCommand:sfClusterExplorer.sfSetClusterEndpoint",
    "onCommand:sfClusterExplorer.sfGetCluster",
    "onCommand:sfClusterExplorer.sfGetClusters",
    "onCommand:sfClusterExplorer.sfDeployDevCluster",
    "onCommand:sfClusterExplorer.sfRemoveClusterEndpoint",
    "onCommand:sfClusterExplorer.sfSetClusterRestCall",
    "onCommand:sfClusterExplorer.showManagementView",
    "onCommand:sfClusterExplorer.deployApplicationFromContext",
    "onCommand:sfClusterExplorer.manageNodeFromContext",
    "onCommand:sfClusterExplorer.exportSnapshot",
    "onCommand:sfClusterExplorer.generateEventsReport",
    "onCommand:sfClusterExplorer.generateHealthReport",
    "onCommand:sfClusterExplorer.generateMetricsReport",
    "onCommand:sfClusterExplorer.generateCommandsReference",
    "onCommand:sfClusterExplorer.generateRepairTasksReport",
    "onCommand:sfClusterExplorer.generateEssentialsReport",
    "onCommand:sfClusterExplorer.removeClusterFromTree",
    "onCommand:sfClusterExplorer.setActiveCluster",
    "onCommand:sfClusterExplorer.restartReplica",
    "onCommand:sfClusterExplorer.deleteReplica",
    "onCommand:sfClusterExplorer.deleteService",
    "onCommand:sfClusterExplorer.deleteApplication",
    "onCommand:sfClusterExplorer.unprovisionApplicationType",
    "onCommand:sfApplications.refresh",
    "onCommand:sfApplications.buildProject",
    "onCommand:sfApplications.deployProject",
    "onCommand:sfApplications.removeFromCluster",
    "onCommand:sfApplications.upgradeApplication",
    "onCommand:sfApplications.deployWithProfile",
    "onCommand:sfApplications.openManifest",
    "onCommand:sfApplications.addExternalProject",
    "onCommand:sfApplications.removeExternalProject"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "serviceFabricClusterView",
          "name": "Service Fabric Clusters",
          "when": "serviceFabricActive"
        },
        {
          "id": "serviceFabricApplicationsView",
          "name": "Service Fabric Applications",
          "when": "serviceFabricActive"
        },
        {
          "id": "serviceFabricManagementPanel",
          "name": "Service Fabric Management",
          "type": "webview",
          "when": "serviceFabricActive"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "serviceFabricApplicationsView",
        "contents": "No Service Fabric application projects (.sfproj) found in this workspace.\n[Add External Project](command:sfApplications.addExternalProject)\n[Learn more](https://learn.microsoft.com/en-us/azure/service-fabric/service-fabric-application-model)"
      }
    ],
    "commands": [
      {
        "command": "sfClusterExplorer.startExtension",
        "title": "service fabric: Start Extension"
      },
      {
        "command": "sfClusterExplorer.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "sfClusterExplorer.sfDeployDevCluster",
        "title": "service fabric: deploy development cluster"
      },
      {
        "command": "sfClusterExplorer.sfGetClusters",
        "title": "service fabric: get clusters from subscription"
      },
      {
        "command": "sfClusterExplorer.sfGetCluster",
        "title": "service fabric: get cluster"
      },
      {
        "command": "sfClusterExplorer.sfSetClusterEndpoint",
        "title": "service fabric: add cluster endpoint ('https://localhost:19080')"
      },
      {
        "command": "sfClusterExplorer.sfRemoveClusterEndpoint",
        "title": "service fabric: remove cluster endpoint ('https://localhost:19080')"
      },
      {
        "command": "sfClusterExplorer.sfSetClusterRestCall",
        "title": "service fabric: adhoc REST query ('/$/GetClusterHealth')"
      },
      {
        "command": "sfClusterExplorer.showManagementView",
        "title": "Manage Cluster",
        "icon": "$(tools)"
      },
      {
        "command": "sfClusterExplorer.deployApplicationFromContext",
        "title": "Deploy Application",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "sfClusterExplorer.manageNodeFromContext",
        "title": "Manage Node",
        "icon": "$(server)"
      },
      {
        "command": "sfClusterExplorer.exportSnapshot",
        "title": "Export Snapshot",
        "icon": "$(save)"
      },
      {
        "command": "sfClusterExplorer.generateEventsReport",
        "title": "Generate Events Report (Markdown)",
        "icon": "$(file-text)"
      },
      {
        "command": "sfClusterExplorer.generateHealthReport",
        "title": "Generate Health Report (Markdown)",
        "icon": "$(pulse)"
      },
      {
        "command": "sfClusterExplorer.generateMetricsReport",
        "title": "Generate Metrics Report (Markdown)",
        "icon": "$(graph)"
      },
      {
        "command": "sfClusterExplorer.generateCommandsReference",
        "title": "Generate Commands Reference (Markdown)",
        "icon": "$(book)"
      },
      {
        "command": "sfClusterExplorer.generateRepairTasksReport",
        "title": "Generate Repair Tasks Report (Markdown)",
        "icon": "$(tools)"
      },
      {
        "command": "sfClusterExplorer.generateEssentialsReport",
        "title": "Generate Cluster Essentials Report (Markdown)",
        "icon": "$(info)"
      },
      {
        "command": "sfClusterExplorer.removeClusterFromTree",
        "title": "Remove Cluster from Tree",
        "icon": "$(trash)"
      },
      {
        "command": "sfClusterExplorer.setActiveCluster",
        "title": "Set as Active Cluster",
        "icon": "$(star-full)"
      },
      {
        "command": "sfClusterExplorer.resetExtensionState",
        "title": "Reset Extension State",
        "category": "Service Fabric",
        "icon": "$(debug-restart-frame)"
      },
      {
        "command": "sfClusterExplorer.restartReplica",
        "title": "Restart Replica (Stateful Only)",
        "icon": "$(debug-restart)"
      },
      {
        "command": "sfClusterExplorer.deleteReplica",
        "title": "Delete Replica/Instance",
        "icon": "$(trash)"
      },
      {
        "command": "sfClusterExplorer.deleteService",
        "title": "Delete Service",
        "icon": "$(trash)"
      },
      {
        "command": "sfClusterExplorer.deleteApplication",
        "title": "Delete Application",
        "icon": "$(trash)"
      },
      {
        "command": "sfClusterExplorer.unprovisionApplicationType",
        "title": "Unprovision Application Type",
        "icon": "$(remove)"
      },
      {
        "command": "sfApplications.refresh",
        "title": "Refresh Projects",
        "icon": "$(refresh)"
      },
      {
        "command": "sfApplications.buildProject",
        "title": "Build Project",
        "icon": "$(tools)"
      },
      {
        "command": "sfApplications.deployProject",
        "title": "Deploy Project",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "sfApplications.openManifest",
        "title": "Open Application Manifest",
        "icon": "$(file-code)"
      },
      {
        "command": "sfApplications.addExternalProject",
        "title": "Add External Project/Folder",
        "icon": "$(add)"
      },
      {
        "command": "sfApplications.removeFromCluster",
        "title": "Remove from Cluster",
        "icon": "$(trash)"
      },
      {
        "command": "sfApplications.upgradeApplication",
        "title": "Upgrade Application",
        "icon": "$(arrow-up)"
      },
      {
        "command": "sfApplications.deployWithProfile",
        "title": "Deploy with Profile",
        "icon": "$(rocket)"
      },
      {
        "command": "sfApplications.removeExternalProject",
        "title": "Remove External Project",
        "icon": "$(remove)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sfClusterExplorer.showManagementView"
        }
      ],
      "view/title": [
        {
          "command": "sfClusterExplorer.showManagementView",
          "when": "view == serviceFabricClusterView",
          "group": "navigation"
        },
        {
          "command": "sfApplications.refresh",
          "when": "view == serviceFabricApplicationsView",
          "group": "navigation"
        },
        {
          "command": "sfApplications.addExternalProject",
          "when": "view == serviceFabricApplicationsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sfClusterExplorer.showManagementView",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "inline@1"
        },
        {
          "command": "sfApplications.buildProject",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "inline@1"
        },
        {
          "command": "sfApplications.deployProject",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "inline@2"
        },
        {
          "command": "sfApplications.openManifest",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "navigation@1"
        },
        {
          "command": "sfApplications.removeExternalProject",
          "when": "view == serviceFabricApplicationsView && viewItem == sfProjectExternal",
          "group": "navigation@2"
        },
        {
          "command": "sfApplications.buildProject",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "project@1"
        },
        {
          "command": "sfApplications.deployProject",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "project@2"
        },
        {
          "command": "sfApplications.upgradeApplication",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "project@3"
        },
        {
          "command": "sfApplications.removeFromCluster",
          "when": "view == serviceFabricApplicationsView && viewItem =~ /^sfProject/",
          "group": "project@4"
        },
        {
          "command": "sfApplications.deployWithProfile",
          "when": "view == serviceFabricApplicationsView && viewItem == publishProfile",
          "group": "inline@1"
        },
        {
          "command": "sfApplications.deployWithProfile",
          "when": "view == serviceFabricApplicationsView && viewItem == publishProfile",
          "group": "profile@1"
        },
        {
          "command": "sfClusterExplorer.showManagementView",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "management@1"
        },
        {
          "command": "sfClusterExplorer.deployApplicationFromContext",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "management@2"
        },
        {
          "command": "sfClusterExplorer.manageNodeFromContext",
          "when": "view == serviceFabricClusterView && viewItem == node",
          "group": "management@1"
        },
        {
          "command": "sfClusterExplorer.exportSnapshot",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "snapshot@1"
        },
        {
          "command": "sfClusterExplorer.exportSnapshot",
          "when": "view == serviceFabricClusterView && viewItem == node",
          "group": "snapshot@1"
        },
        {
          "command": "sfClusterExplorer.generateEventsReport",
          "when": "view == serviceFabricClusterView && viewItem == events",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateEventsReport",
          "when": "view == serviceFabricClusterView && viewItem == node-events",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateEventsReport",
          "when": "view == serviceFabricClusterView && viewItem == app-events",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateEventsReport",
          "when": "view == serviceFabricClusterView && viewItem == service-events",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateEventsReport",
          "when": "view == serviceFabricClusterView && viewItem == partition-events",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateEventsReport",
          "when": "view == serviceFabricClusterView && viewItem == replica-events",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "reports@2"
        },
        {
          "command": "sfClusterExplorer.removeClusterFromTree",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "remove@1"
        },
        {
          "command": "sfClusterExplorer.setActiveCluster",
          "when": "view == serviceFabricClusterView && viewItem == cluster",
          "group": "cluster@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == health",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == node-health",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == app-health",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == service-health",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == partition-health",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateHealthReport",
          "when": "view == serviceFabricClusterView && viewItem == replica-health",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateMetricsReport",
          "when": "view == serviceFabricClusterView && viewItem == metrics",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateCommandsReference",
          "when": "view == serviceFabricClusterView && viewItem == commands",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateRepairTasksReport",
          "when": "view == serviceFabricClusterView && viewItem == repair-tasks",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.generateEssentialsReport",
          "when": "view == serviceFabricClusterView && viewItem == essentials",
          "group": "reports@1"
        },
        {
          "command": "sfClusterExplorer.restartReplica",
          "when": "view == serviceFabricClusterView && viewItem == replica-stateful",
          "group": "management@1"
        },
        {
          "command": "sfClusterExplorer.deleteReplica",
          "when": "view == serviceFabricClusterView && (viewItem == replica-stateful || viewItem == replica-stateless)",
          "group": "management@2"
        },
        {
          "command": "sfClusterExplorer.deleteService",
          "when": "view == serviceFabricClusterView && viewItem == service",
          "group": "management@1"
        },
        {
          "command": "sfClusterExplorer.deleteApplication",
          "when": "view == serviceFabricClusterView && viewItem == application",
          "group": "management@1"
        },
        {
          "command": "sfClusterExplorer.unprovisionApplicationType",
          "when": "view == serviceFabricClusterView && viewItem == applicationType",
          "group": "management@1"
        }
      ]
    },
    "configuration": [
      {
        "title": "Service Fabric Cluster Explorer",
        "properties": {
          "sfClusterExplorer.autoStart": {
            "type": "boolean",
            "default": false,
            "description": "Automatically show Service Fabric views when VS Code starts. When false, views remain hidden until you run 'service fabric: Start Extension' or any Service Fabric command."
          },
          "sfClusterExplorer.autorefresh": {
            "type": "boolean",
            "default": false,
            "description": "Enable automatic refresh of cluster data at regular intervals"
          },
          "sfClusterExplorer.refreshInterval": {
            "type": "number",
            "default": 30000,
            "description": "Auto-refresh interval in milliseconds (default: 30000 = 30 seconds)",
            "minimum": 5000
          },
          "sfClusterExplorer.clusters": {
            "type": "array",
            "default": [],
            "description": "List of saved Service Fabric cluster endpoints"
          },
          "sfClusterExplorer.autoReconnect": {
            "type": "boolean",
            "default": true,
            "description": "Automatically reconnect to previously connected clusters when VS Code starts"
          },
          "sfClusterExplorer.deployMethod": {
            "type": "string",
            "default": "rest",
            "enum": [
              "rest",
              "powershell",
              "ask"
            ],
            "enumDescriptions": [
              "Use REST API (Upload → Provision → Create via direct HTTP)",
              "Use PowerShell SF SDK cmdlets (requires SF SDK installed)",
              "Prompt to choose each time"
            ],
            "description": "Default deployment method for Service Fabric applications"
          },
          "sfClusterExplorer.timeoutSeconds": {
            "type": "number",
            "default": 1200,
            "minimum": 10,
            "description": "Operation timeout in seconds for Service Fabric REST API calls (default: 1200 = 20 minutes, matches SF cluster default). Can also be set via SF_TIMEOUT_SEC environment variable."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "postcompile": "npm run validate:html",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --no-dependencies",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns=test/unit",
    "test:az": "jest --testPathPatterns=azureCliCommandGenerator --no-coverage",
    "test:integration": "jest --testPathPatterns=test/integration",
    "test:integration:low-risk": "jest --testPathPatterns=test/integration/01-low-risk --verbose",
    "test:integration:medium-risk": "jest --testPathPatterns=test/integration/02-medium-risk --verbose",
    "test:integration:high-risk": "jest --testPathPatterns=test/integration/03-high-risk --verbose",
    "test:integration:node-lifecycle": "jest --testPathPatterns=test/integration/node-lifecycle --verbose",
    "test:integration:api-version": "jest --testPathPatterns=test/integration/00-api-version --verbose",
    "test:integration:safe": "npm run test:integration:api-version && npm run test:integration:low-risk && npm run test:integration:medium-risk",
    "validate:html": "npm run test:html || echo '⚠️  Warning: HTML validation had issues'",
    "test:html": "jest --testPathPatterns=htmlValidator --silent --no-coverage",
    "test:integration:all": "jest --testPathPatterns=test/integration/0 --verbose --runInBand",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:mock-server": "jest --testPathPatterns=mock-server.integration --testPathIgnorePatterns=/node_modules/ --verbose",
    "test:snapshots": "jest --testPathPatterns=mock-server-snapshots --testPathIgnorePatterns=/node_modules/ --verbose",
    "update:snapshots": "jest --testPathPatterns=mock-server-snapshots --testPathIgnorePatterns=/node_modules/ --updateSnapshot --verbose",
    "generate-fixtures": "npx tsc test/fixtures/generators/clusterGenerator.ts --outDir temp/gen --esModuleInterop --resolveJsonModule --target ES2020 --module commonjs --moduleResolution node --skipLibCheck && node temp/gen/clusterGenerator.js && node -e \"fs=require('fs');fs.rmSync('temp/gen',{recursive:true,force:true})\"",
    "capture-fixtures": "npx tsc scripts/capture-cluster-fixtures.ts --outDir temp/capture --esModuleInterop --resolveJsonModule --target ES2020 --module commonjs --moduleResolution node --skipLibCheck && node temp/capture/capture-cluster-fixtures.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@azure/arm-resources": "^5.2.0",
    "@azure/arm-servicefabric": "^2.1.0",
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/core-client": "^1.7.3",
    "@azure/core-rest-pipeline": "^1.11.0",
    "@azure/identity": "^4.13.0",
    "@azure/logger": "^1.0.4",
    "@azure/servicefabric": "^5.0.0",
    "@microsoft/vscode-azext-utils": "^2.0.1",
    "@types/dotenv": "^6.1.1",
    "dotenv": "^16.6.1",
    "ftp": "^0.3.10",
    "jsonc-parser": "^0.4.2",
    "minimist": "^1.2.6",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/ftp": "^0.3.36",
    "@types/jest": "^30.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/rimraf": "^3.0.2",
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "@xmldom/xmldom": "^0.8.11",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "license-checker": "^25.0.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
